<% if @student.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

    <ul>
      <% @student.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @student do |f| %>
   
    <%= f.label :first_name, "First Name:" %>
    <%= f.text_field :first_name %></br>
    <%= f.label :last_name, "Last Name:" %>
    <%= f.text_field :last_name %></br>
    <%= f.label "email:" %>
    <%= f.email_field :email %></br>
    <%= f.label "username:" %>
    <%= f.text_field :username %></br>
    <%= f.label "password:" %>
    <%= f.password_field :password %></br>
    <%= f.label "Grade:" %>
    <%= f.select :grade, ["6th", "7th", "8th", "9th", "10th", "11th", "12th"] %></br>
    <%= f.label :subject_help, "Subject Area:" %>
    <%= f.select :subject_help, ["English", "Math", "Science", "History", "Arts & Humanities", "Foreign Launguage", "Computer Science", "Other"] %></br>
    <%= f.label :student_bio, "What topic/unit do you need help? i.e. 'I need help with Pythagorean Theorem in Geometry'" %></br>
    <%= f.text_area :student_bio , size: "60x7"%></br>
  
    <%= f.submit "Create Student Account" %>
<% end %>
