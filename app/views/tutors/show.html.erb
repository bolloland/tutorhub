    <%= @tutor.subject_taught %>
<% else %>
    <i>"please enter subject" </i>
<% end %>   for:
<% if @tutor.years_exp %> 
    <%= @tutor.years_exp %>
<% else %>
<i>"please enter years of experience"</i>
<% end  %> years</br>
